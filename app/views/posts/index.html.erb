<div class="contents row" >
  <% @posts.each do |post| %>
    <div class="content_post" style="background-image: url(<%= post.image %>);">
      <%= simple_format(post.text) %>
      <span class="name">
        <a href="/users<%= post.user_id %>">
          <span>投稿者</span><%= post.user.nickname %>
          <span class="title"><%= post.title %></span>
        </a>
      </span>
    </div>
  <% end %>
  <%= paginate(@posts) %>
</div>